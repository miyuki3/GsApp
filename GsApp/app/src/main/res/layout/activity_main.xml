<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar2" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_height="wrap_content"
                android:id="@+id/scroll"
                android:layout_width="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:columnCount="3"
                    android:rowCount="5">

                    <ImageView
                        android:id="@+id/gallery01"
                        android:src="@drawable/s_1"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />
                    <ImageView
                        android:id="@+id/gallery02"
                        android:src="@drawable/s_2"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/gallery03"
                        android:src="@drawable/s_3"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/gallery04"
                        android:src="@drawable/s_4"
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/gallery05"
                        android:src="@drawable/s_5"
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:id="@+id/gallery06"
                        android:src="@drawable/s_6"
                        android:layout_column="2"
                        android:layout_row="1"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:id="@+id/gallery07"
                        android:src="@drawable/s_7"
                        android:layout_column="0"
                        android:layout_row="2"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:id="@+id/gallery08"
                        android:src="@drawable/s_8"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:id="@+id/gallery09"
                        android:src="@drawable/s_9"
                        android:layout_column="2"
                        android:layout_row="2"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/gallery10"
                        android:src="@drawable/s_1"
                        android:layout_column="0"
                        android:layout_row="3"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/gallery11"
                        android:src="@drawable/s_2"
                        android:layout_column="1"
                        android:layout_row="3"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>

                    <ImageView
                        android:id="@+id/gallery12"
                        android:src="@drawable/s_3"
                        android:layout_column="2"
                        android:layout_row="3"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:id="@+id/gallery13"
                        android:src="@drawable/s_10"
                        android:layout_column="0"
                        android:layout_row="4"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:id="@+id/gallery14"
                        android:src="@drawable/s_1"
                        android:layout_column="1"
                        android:layout_row="4"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    <ImageView
                        android:id="@+id/gallery15"
                        android:src="@drawable/s_2"
                        android:layout_column="2"
                        android:layout_row="4"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"/>
                    </GridLayout>

                </LinearLayout>

            </ScrollView>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
